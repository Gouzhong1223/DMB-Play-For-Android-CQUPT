<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".actives.fragment.PlaySettingFragment">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

        <TextView
                android:layout_marginTop="20dp"
                android:focusable="false"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="35sp"
                android:text="@string/player_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <RelativeLayout
                android:id="@+id/playSettingRelativeLayout1"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                tools:ignore="UselessParent">

            <com.xuexiang.xui.widget.alpha.XUIAlphaTextView
                    android:text="@string/whether_to_display_the_signal"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="RelativeOverlap" />

            <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/SwitchCompat"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                tools:ignore="UselessParent">

            <com.xuexiang.xui.widget.alpha.XUIAlphaTextView
                    android:text="@string/is_show_debug_log"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="RelativeOverlap" />

            <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/deBugLogSwitchCompat"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                tools:ignore="UselessParent">

            <com.xuexiang.xui.widget.alpha.XUIAlphaTextView
                    android:id="@+id/Audio_output_modeTextView"
                    android:text="@string/Audio_output_mode"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="RelativeOverlap" />

            <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/audioOutputModeSwitchCompat"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/playSettingRelativeLayout2"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                tools:ignore="UselessParent">

            <com.xuexiang.xui.widget.alpha.XUIAlphaTextView
                    android:text="@string/APP_starts_the_default_loading_scene"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="RelativeOverlap" />

            <Spinner
                    android:id="@+id/default_sense_spinner"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true" />
        </RelativeLayout>


        <RelativeLayout
                android:id="@+id/playSettingRelativeLayout3"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                tools:ignore="UselessParent">

            <com.xuexiang.xui.widget.alpha.XUIAlphaTextView
                    android:text="@string/number_of_carousel_containers"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="RelativeOverlap" />

            <Spinner
                    android:id="@+id/carousel_num_spinner"
                    style="@style/XUITheme.Tablet.Big"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
