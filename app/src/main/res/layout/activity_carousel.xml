<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".actives.CarouselActivity">

    <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.youth.banner.Banner>

    <TextClock
            android:id="@+id/tv_time"
            android:layout_width="255dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:format24Hour="HH:mm"
            android:format12Hour="hh:mm"
            android:textColor="@color/lb_tv_white"
            android:textSize="70dp"
            app:layout_constraintStart_toStartOf="parent" />

    <TextClock
            android:id="@+id/tv_date"
            android:layout_width="253dp"
            android:layout_height="71dp"
            android:layout_below="@+id/tv_time"
            android:layout_centerHorizontal="true"
            android:format24Hour="MM月dd日 EEEE"
            android:format12Hour="MM月dd日 EEEE"
            android:textColor="@color/lb_tv_white"
            android:textSize="20dp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_time"
            app:layout_constraintEnd_toEndOf="@+id/tv_time" />

    <TextView
            android:text="信号显示在这里"
            android:textColor="#FF0000"
            android:textAlignment="center"
            android:textSize="30sp"
            android:id="@+id/xinhao"
            android:layout_width="234dp"
            android:layout_height="49dp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>
