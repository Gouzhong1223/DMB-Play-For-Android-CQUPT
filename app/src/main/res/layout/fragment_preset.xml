<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".actives.fragment.PresetFragment">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

        <TextView
                android:layout_marginTop="20dp"
                android:focusable="false"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="35sp"
                android:text="播放设置"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

            <TextView
                    android:text="预设名称"
                    android:textSize="20sp"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                    android:id="@+id/sceneNameEdit"
                    style="@style/EditText.Material"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_width="200dp"
                    android:height="60dp"
                    android:layout_height="wrap_content"
                    android:hint="给使用场景取个名字吧" />
        </RelativeLayout>

        <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

            <TextView
                    android:text="工作频点"
                    android:textSize="20sp"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                    android:id="@+id/frequencyEdit"
                    style="@style/EditText.Material"
                    android:inputType="number"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_width="200dp"
                    android:height="60dp"
                    android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

            <TextView
                    android:text="设备ID"
                    android:textSize="20sp"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                    android:id="@+id/idEdit"
                    android:inputType="number"
                    style="@style/EditText.Material"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_width="200dp"
                    android:height="60dp"
                    android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

            <TextView
                    android:text="播放类型"
                    android:textSize="20sp"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <Spinner
                    style="@style/Material.SpinnerStyle"
                    android:id="@+id/playType"
                    app:ms_in_dialog="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_width="200dp"
                    android:height="60dp"
                    android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
                android:visibility="invisible"
                android:id="@+id/buildingRelativeLayout"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

            <TextView
                    android:text="教学楼"
                    android:textSize="20sp"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <Spinner
                    style="@style/Material.SpinnerStyle"
                    android:id="@+id/playBuilding"
                    android:layout_centerVertical="true"
                    app:ms_in_dialog="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_width="200dp"
                    android:height="60dp"
                    android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

            <Button
                    android:id="@+id/submit_btn"
                    android:text="保存"
                    android:textSize="40sp"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>
