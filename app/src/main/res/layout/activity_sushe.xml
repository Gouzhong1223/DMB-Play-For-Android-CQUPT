<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".actives.DormitorySafetyActivity">

    <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="600dp"
            android:layout_height="337.5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.792" />

    <TextClock
            android:id="@+id/sushe_date_textview"
            android:layout_width="200dp"
            android:layout_height="37dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:format24Hour="HH:mm"
            android:format12Hour="hh:mm"
            android:textColor="#FF0000"
            android:textSize="25dp"
            app:layout_constraintBottom_toTopOf="@+id/banner"
            app:layout_constraintEnd_toEndOf="@+id/banner" />


    <TextClock
            android:id="@+id/sushe_time_textview"
            android:layout_width="400dp"
            android:layout_height="37dp"
            android:layout_centerHorizontal="true"
            android:format24Hour="yyyy年MM月dd日    EEEE"
            android:format12Hour="yyyy年MM月dd日    EEEE"
            android:textColor="#FF0000"
            android:textSize="25dp"
            android:textAlignment="center"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toTopOf="@+id/banner"
            app:layout_constraintStart_toStartOf="@+id/banner" />

