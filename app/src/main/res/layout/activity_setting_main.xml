<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".actives.SettingActivity"
        android:background="@drawable/white">

    <TextView
            android:text="@string/setting_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="50sp"
            android:textColor="#F1B502"
            tools:ignore="MissingConstraints"
            android:id="@+id/textView2" />

    <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            tools:ignore="MissingConstraints"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:id="@+id/linearLayout2">

        <TextView
                android:text="@string/scenes"
                android:textAlignment="center"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <Spinner
                android:spinnerMode="dialog"
                android:scrollbarSize="40sp"
                android:textAlignment="center"
                android:id="@+id/scenes_spinner"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/edit_building"
            android:gravity="center"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
                android:text="@string/editBuildingStr"
                android:textAlignment="center"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <Spinner
                android:spinnerMode="dialog"
                android:scrollbarSize="40sp"
                android:textAlignment="center"
                android:id="@+id/building_spinner"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
            android:gravity="center"
            android:layout_width="243dp"
            android:layout_height="55dp"
            tools:ignore="MissingConstraints"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/edit_building"
            android:layout_marginTop="130dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout4">

        <Button
                android:id="@+id/sure"
                android:text="@string/sure"
                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            tools:ignore="MissingConstraints"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="359dp"
            app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:id="@+id/hint_text_view"
                android:textSize="25sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            tools:ignore="MissingConstraints"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="359dp"
            android:id="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
                android:id="@+id/default_text_view"
                android:textSize="25sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
