<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".actives.AudioActivity">

    <cn.edu.cqupt.dmb.player.video.frame.AudioPlayerFrame
            android:id="@+id/audioPlayerFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    <ImageView
            android:id="@+id/audio_signal"
            android:layout_width="135dp"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/carousel_signal_description" />

</androidx.constraintlayout.widget.ConstraintLayout>
